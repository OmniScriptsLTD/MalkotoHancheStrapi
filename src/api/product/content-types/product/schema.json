{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Product collection for the store"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "oldPrice": {
      "type": "decimal"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "imageUrl": {
      "type": "string"
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "products",
      "repeatable": true
    },
    "description": {
      "type": "text"
    },
    "origin": {
      "type": "string"
    },
    "weight": {
      "type": "string"
    },
    "storage": {
      "type": "string"
    },
    "nutritionFacts": {
      "type": "component",
      "component": "shared.nutrition-fact"
    }
  }
} 